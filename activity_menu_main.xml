<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2E4D8">

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="254dp"
        android:layout_height="56dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/loginButton"
        android:background="@drawable/edittext_background"
        android:hint="Buscar..." />

    <Button
        android:id="@+id/createAccountButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="9dp"
        android:background="@drawable/ic_logo_crearcuenta" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/createAccountButton"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="-54dp"
        android:layout_toStartOf="@id/createAccountButton"
        android:text="Crear Cuenta"
        android:textColor="#000000"
        android:textSize="10sp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_toStartOf="@id/createAccountButton"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_logo_iniciarsesion" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginButton"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="-58dp"
        android:layout_toStartOf="@id/loginButton"
        android:text="Iniciar Sesión"
        android:textColor="#000000"
        android:textSize="10sp" />


    <!-- Línea vertical entre los botones -->

    <View
        android:layout_width="48dp"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:layout_toStartOf="@id/loginButton"
        android:layout_toEndOf="@id/createAccountButton"
        android:background="#000000" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchEditText"
            android:layout_marginTop="20dp"
            android:background="#000000">

            <TextView
                android:id="@+id/productsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Nuestros Productos"
                android:textColor="#E3F2FD"
                android:textSize="18sp" />



        </RelativeLayout>

    <Button
        android:id="@+id/button_ventiladores"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="@string/ventiladores"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:background="@color/button_background_color"/>

    <Button
        android:id="@+id/button_tostadora"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:text="@string/tostadora"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:background="#FFFFFF"
        style="@style/ButtonStyle"/>
    <Button
        android:id="@+id/button_microondas"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:text="@string/microondas"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button_licuadoras"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:text="@string/licuadoras"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:background="#FFFFFF"/>

    <Button
        android:id="@+id/button_planchas"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:text="@string/planchas"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:background="#FFFFFF"/>


    <TextView
        android:id="@+id/serviceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:text="Servicio al cliente"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/whatsappButton"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_marginTop="640dp"
        android:background="@drawable/ic_logo_whatsapp"
        android:contentDescription="Logo de WhatsApp"
        android:onClick="onWhatsAppButtonClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginButton"
        android:layout_marginTop="613dp"
        android:layout_marginEnd="147dp"
        android:layout_toStartOf="@id/loginButton"
        android:text="3142094969"
        android:textColor="#000000"
        android:textSize="10sp" />

    <Button
        android:id="@+id/RastreoButton"
        android:layout_width="38dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="640dp"
        android:background="@drawable/ic_logo_rastreodecompra"
        android:contentDescription="Rastreodecompra"
        android:onClick="onWhatsAppButtonClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginButton"
        android:layout_marginTop="613dp"
        android:layout_marginEnd="-46dp"
        android:layout_toStartOf="@id/loginButton"
        android:text="Rastrea tu pedido"
        android:textColor="#000000"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RastreoButton"
        android:background="#000000"
        android:padding="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchEditText"
        android:layout_marginTop="20dp"
        android:background="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="690dp"
        android:text="@ABACOMAX 2023 El confort que mereces, en cada momento que vivimos."
        android:textColor="#E3F2FD"
        android:textSize="12dp" />


</RelativeLayout>
