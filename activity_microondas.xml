        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/ic_microondas2" />

    <TextView
        android:id="@+id/textoDebajoImagen2"
        android:layout_width="173dp"
        android:layout_height="30dp"
        android:layout_below="@id/imageView_microondas2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-173dp"
        android:layout_marginEnd="9dp"
        android:text="Horno Microondas Haceb Blanco 0.7 (20 Litros).
        $325.511"
        android:textColor="@android:color/black"
        android:textSize="8dp" />

    <Button
        android:id="@+id/btnAgregarAlCarrito2"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_microondas2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="48dp"
        android:text="Añadir al carrito" />


