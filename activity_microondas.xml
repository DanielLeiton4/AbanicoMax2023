<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2E4D8">

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="254dp"
        android:layout_height="56dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/loginButton"
        android:background="@drawable/edittext_background"
        android:hint="Buscar..." />

    <Button
        android:id="@+id/createAccountButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="9dp"
        android:background="@drawable/ic_logo_crearcuenta" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/createAccountButton"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="-54dp"
        android:layout_toStartOf="@id/createAccountButton"
        android:text="Crear Cuenta"
        android:textColor="#000000"
        android:textSize="10sp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_toStartOf="@id/createAccountButton"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_logo_iniciarsesion" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginButton"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="-58dp"
        android:layout_toStartOf="@id/loginButton"
        android:text="Iniciar Sesión"
        android:textColor="#000000"
        android:textSize="10sp" />


    <!-- Línea vertical entre los botones -->

    <View
        android:layout_width="48dp"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:layout_toStartOf="@id/loginButton"
        android:layout_toEndOf="@id/createAccountButton"
        android:background="#000000" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchEditText"
        android:layout_marginTop="20dp"
        android:background="#000000">

        <TextView
            android:id="@+id/productsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:text="Microondas"
            android:textColor="#E3F2FD"
            android:textSize="18sp" />



    </RelativeLayout>


    <!-- Tu TextView para el texto -->

    <ImageView
        android:id="@+id/imageView_microondas1"
        android:layout_width="139dp"
        android:layout_height="134dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/ic_microondas1" />

    <TextView
        android:id="@+id/textoDebajoImagen1"
        android:layout_width="123dp"
        android:layout_height="39dp"
        android:layout_below="@id/imageView_microondas1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="-173dp"
        android:text="Horno Microondas Haceb Inox Con Grill Y Manija 1.1 (31 Litros)$541.366"
        android:textColor="@android:color/black"
        android:textSize="8dp" />

    <Button
        android:id="@+id/btnAgregarAlCarrito"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_microondas1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="0dp"
        android:text="Añadir al carrito" />

    <!-- ventilador2 -->

    <ImageView
