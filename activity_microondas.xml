        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="400dp"
        android:src="@drawable/ic_microondas3" />



    <TextView
        android:id="@+id/textoDebajoImagen3"
        android:layout_width="192dp"
        android:layout_height="26dp"
        android:layout_below="@id/imageView_microondas3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="-167dp"
        android:text="Horno Microondas Haceb Inox 0.7 (20 Litros).
        $366.274"

        android:textColor="@android:color/black"
        android:textSize="8dp" />

    <Button
        android:id="@+id/btnAgregarAlCarrito3"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_microondas3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="5dp"
        android:text="Añadir al carrito" />

    <ImageView
        android:id="@+id/imageView_microondas4"

        android:layout_width="153dp"
        android:layout_height="134dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="29dp"
        android:src="@drawable/ic_microondas4" />

    <TextView
        android:id="@+id/textoDebajoImagen4"
        android:layout_width="186dp"
        android:layout_height="33dp"
        android:layout_below="@id/imageView_microondas4"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-170dp"
        android:layout_marginEnd="0dp"
        android:text="Horno Microondas Haceb Azafrán 1.1 Grill Negro (31 Litros).$604.710"
        android:textColor="@android:color/black"
        android:textSize="8dp" />

    <Button
        android:id="@+id/btnAgregarAlCarrito4"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_microondas4"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="46dp"
        android:text="Añadir al carrito" />

    <TextView
        android:id="@+id/serviceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:text="Servicio al cliente"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/whatsappButton"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_marginTop="640dp"
        android:background="@drawable/ic_logo_whatsapp"
        android:contentDescription="Logo de WhatsApp"
        android:onClick="onWhatsAppButtonClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginButton"
        android:layout_marginTop="613dp"
        android:layout_marginEnd="147dp"
        android:layout_toStartOf="@id/loginButton"
        android:text="Atención al cliente"
        android:textColor="#000000"
        android:textSize="10sp" />

    <Button
        android:id="@+id/RastreoButton"
        android:layout_width="38dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="640dp"
        android:background="@drawable/ic_logo_rastreodecompra"
        android:contentDescription="Rastreodecompra"
        android:onClick="onWhatsAppButtonClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginButton"
        android:layout_marginTop="613dp"
        android:layout_marginEnd="-46dp"
        android:layout_toStartOf="@id/loginButton"
        android:text="Rastrea tu pedido"
        android:textColor="#000000"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RastreoButton"
        android:background="#000000"
        android:padding="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchEditText"
        android:layout_marginTop="20dp"
        android:background="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="690dp"
        android:text="@ABACOMAX 2023 El confort que mereces, en cada momento que vivimos."
        android:textColor="#E3F2FD"
        android:textSize="12dp" />


</RelativeLayout>
